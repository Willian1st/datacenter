<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
         <shape>
             <!-- 渐变 -->
             <gradient
                 android:startColor="#082E54"
                 android:endColor="#FFFFFF"
                 android:type="radial"
                 android:gradientRadius="100" />
             <!-- 描边 -->
             <stroke
                 android:width="2dp"
                 android:color="#000000"
                 android:dashWidth="10dp" 
                 android:dashGap="0dp" />
             <!-- 圆角 -->
             <corners
                 android:radius="20dp" />
             <padding
                 android:left="10dp"
                 android:top="10dp"
                 android:right="10dp"
                 android:bottom="10dp" />
         </shape>
     </item>

     <item android:state_focused="true" >
         <shape>
             <gradient
                 android:startColor="#082E54"
                 android:endColor="#ffc2b7"
                 android:angle="270" />
             <stroke
                 android:width="30dp"
                 android:color="#dcdcdc" />
             <corners
                 android:radius="2dp" />
             <padding
                 android:left="0dp"
                 android:top="0dp"
                 android:right="0dp"
                 android:bottom="0dp" />
         </shape>
     </item>

     <item>       
         <shape>
             <!-- 渐变 -->
             <gradient
                 android:startColor="#808069"
                 android:endColor="#808A87"
                 android:type="radial"
                 android:gradientRadius="100" />
             <!-- 描边 -->
             <stroke
                 android:width="2dp"
                 android:color="#000000"
                 android:dashWidth="10dp" 
                 android:dashGap="0dp" />
             <!-- 圆角 -->
             <corners
                 android:radius="20dp" />
             <padding
                 android:left="10dp"
                 android:top="10dp"
                 android:right="10dp"
                 android:bottom="10dp" />
         </shape>
     </item>

</selector>
